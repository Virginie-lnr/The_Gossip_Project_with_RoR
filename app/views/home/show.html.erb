
<h2 class="m-2 ml-4 mt-4 text-center">Welcome to visitors!</h2>

<p class="m-2 ml-4 mb-5 text-center">Here is the list of gossips with the title and author:</p>



<div class="card-deck">
  <% @gossips.each do |gossip| %>
    <div class="col-lg-3 col-md-6 mb-3">
      <div class="card text-left my-3">
        <div class="card-body">
          <h5 class="card-title text-info">Gossip nÂ° <%= gossip.id %></h5>
          <h5 class="card-title text-secondary"> Title : <%= gossip.title%></h5>
          <p class="card-text"> Author: <%= gossip.user.first_name %> </p>
        </div>
        <div class="card-footer">
          <p class="small text-muted mr-0">
            Post by <%= link_to "#{gossip.user.first_name} #{gossip.user.last_name}", root_path(gossip.user.id) %> on <%= gossip.created_at.strftime("%d/%m/%Y") %> at <%= gossip.created_at.strftime("%H:%I") %>.
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>






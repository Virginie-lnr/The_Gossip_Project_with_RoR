<h1 class="text-center m-3 mt-5">Add a new gossip</h1>


<div class="row justify-content-center">
  <div class="col-5">
    <%= form_tag url_for(action: 'create'), method: "post" do %>
      <div class="form-group">
        <%= label_tag 'Title :' %>
        <%= text_field_tag 'title', @title, {class: 'form-control'} %>
      </div>
      <div class="form-group">
        <%= label_tag 'Content :' %>
        <%= text_area_tag 'content', @content, {class: 'form-control'} %>
      </div>

      <div class="form-group">
        <%= label_tag 'Author :' %>
        <%= select_tag "user", options_from_collection_for_select(User.all, :id, :first_name), {class: 'form-control', prompt: 'Choose a user'} %>
      </div>
      
      <div class="row justify-content-center">
          <%= submit_tag "Create gossip", {class: 'btn btn-info'} %>
      </div>
    <% end %>
  </div>
</div>

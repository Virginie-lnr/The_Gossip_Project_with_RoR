

<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4 m-2 ml-4 mt-4 text-center">Welcome to The Gossip Project!</h1>
    <p class="lead m-2 ml-4 mb-5 text-center"></p>
  </div>
</div>

<div class="card-deck">
  <% Gossip.all.each do |gossip| %>
    <div class="col-lg-3 col-md-6 mb-3">
      <div class="card text-center my-3">
        <div class="card-body">
          <h5 class="card-title ">Gossip nÂ° <%= gossip.id %></h5>
          <h5 class="card-title text-secondary"> Title : <%= gossip.title%></h5>
          <p class="card-text"> Author: <%= gossip.user.first_name %> </p>
          <a href="<%= gossip_path(gossip.id) %>" class="btn btn-info text-center">View gossip</a><br><br>
          
        </div>

        <div class="card-footer">
          <p class="small text-muted mr-0">
            Post by <%= link_to "#{gossip.user.first_name} #{gossip.user.last_name}", user_path(gossip.user.id) %> on <%= gossip.created_at.strftime("%d/%m/%Y") %> at <%= gossip.created_at.strftime("%H:%I") %>.
            <%# Located: <%= link_to "#{gossip.user.city.name}", city_path(gossip.user.city.id) %> 
          </p>
        </div>

      </div>
    </div>
  <% end %>
</div>





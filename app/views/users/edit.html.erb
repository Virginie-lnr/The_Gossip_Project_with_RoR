<p>edit page</p>

<% if @user.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li><%= message %> </li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container mt-5">
 <div class="card">
  <div class="card-header mb-3">Sign up</div>
  <div class="card-body">
  
  <%= form_for @user, url: profile_path,  html: {class: 'form-horizontal'} do |f| %>
  <div class="form-group">
    <%= f.label :username, "Username", class: 'col-md-4 control-label'%>
    <div class="col-md-6">
      <%= f.text_field :username, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :first_name, "First name", class: 'col-md-4 control-label'%>
    <div class="col-md-6">
      <%= f.text_field :first_name, class: 'form-control' %>
    </div>
  </div>

   <div class="form-group">
    <%= f.label :last_name, "Last name", class: 'col-md-4 control-label'%>
    <div class="col-md-6">
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, "Email", class: 'col-md-4 control-label'%>
    <div class="col-md-6">
      <%= f.email_field :email, class: 'form-control' %>
    </div>
  </div>

   <div class="form-group">
    <%= f.label :password, "Password", class: 'col-md-4 control-label'%>
    <div class="col-md-6">
      <%= f.password_field :password, class: 'form-control' %>
    </div>
  </div>

   <div class="form-group">
    <%= f.label :password_confirmation, "Confirm Password", class: 'col-md-4 control-label'%>
    <div class="col-md-6">
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-6 col-md">
      <button type="submit" class="btn btn-info">
      Sign up
      </button>
    
  <% end %>
  </div>
 </div>
 

